**FREE
/********************************************************************/
/* Program : MGRREQDTL                                              */
/* Purpose : Manager - View Request Details                         */
/********************************************************************/
ctl-opt dftactgrp(*no)
        actgrp(*caller);

/*------------------------------------------------------------------*/
/* Files                                                            */
/*------------------------------------------------------------------*/
dcl-f MGRREQDDSP workstn;
dcl-f REQDTLFL   usage(*input) keyed;

/*------------------------------------------------------------------*/
/* Parameter                                                        */
/*------------------------------------------------------------------*/
dcl-pi *n;
   pReqId packed(7:0);
end-pi;

/*------------------------------------------------------------------*/
/* Fetch Request                                                    */
/*------------------------------------------------------------------*/
chain pReqId REQDTLFL;
if %notfound(REQDTLFL);
   return;
endif;

/*------------------------------------------------------------------*/
/* Load Display                                                     */
/*------------------------------------------------------------------*/
DSP_REQID  = REQID;
DSP_EMP    = EMPID;
DSP_TIME   = REQTIME;
DSP_PICK   = PICKUP;
DSP_DROP   = DROPLOC;
DSP_STAT   = STATUS;

/*------------------------------------------------------------------*/
/* Display Window                                                   */
/*------------------------------------------------------------------*/
exfmt REQDTLW;

return;
